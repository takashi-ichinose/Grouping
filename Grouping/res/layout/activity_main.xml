<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/settingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Setting" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="deletePref" />

    <Button
        android:id="@+id/groupingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/deleteButton"
        android:layout_toLeftOf="@+id/settingButton"
        android:layout_alignParentBottom="true"
        android:textColor="#f00"
        android:textStyle="bold"
        android:text="Grouping" />
    
    <TextView 
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/settingButton"
        android:textColor="#00f"
        android:text="グループ条件："/>
    

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" >
    </ListView>

    <TextView
        android:id="@+id/ruleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView"
        android:layout_toRightOf="@+id/textView1"
        android:text="4人グループ" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingButton"
        android:layout_toRightOf="@+id/ruleView"
        android:textColor="#00f"
        android:text="　誤差範囲：" />

    <TextView
        android:id="@+id/rangeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settingButton"
        android:layout_toRightOf="@+id/textView2"
        android:text="＋1人" />
    
    <TextView 
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#f00"
        android:text="参加者を選択して下さい。"/>

</RelativeLayout>